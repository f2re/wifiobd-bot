# VK Bot Configuration
VK_TOKEN=your_vk_community_token_here
VK_GROUP_ID=your_vk_group_id_here
ADMIN_IDS=123456789,987654321

# OpenCart Configuration
OPENCART_URL=https://wifiobd.ru

# OpenCart API (Version 3.0.2.0)
# Create API user in: OpenCart Admin -> System -> Users -> API
# You will get Username (Token Name) and API Key
OPENCART_API_USERNAME=Default
OPENCART_API_KEY=your_api_key_from_opencart_here

# OpenCart Database (Read-Only Access)
OPENCART_DB_HOST=your_opencart_db_host
OPENCART_DB_PORT=3306
OPENCART_DB_NAME=opencart
OPENCART_DB_USER=readonly_user
OPENCART_DB_PASSWORD=your_readonly_password

# Bot Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wifiobd_bot_db
DB_USER=wifiobd_bot
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# YooKassa Payment Configuration (updated from YooMoney)
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Cart Settings
CART_EXPIRE_DAYS=7

# Pagination Settings
PRODUCTS_PER_PAGE=10
CATEGORIES_PER_PAGE=10

# Throttling (Anti-Spam)
THROTTLE_TIME=0.5

# VK Bot Specific Settings
VK_API_VERSION=5.131
VK_CONFIRMATION_CODE=your_vk_confirmation_code_here
